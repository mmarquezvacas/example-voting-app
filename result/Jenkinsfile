pipeline {
    agent any
    tools {
        nodejs 'NodeJS 8.9.0'
    }
    stages {
        stage('build'){
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Compiling...'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Running unit tests'
                dir('result') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
    }

    post {
        always {
            echo 'END'
        }
    }
}
pipeline {
    agent none
    stages {
        stage('build'){
            agent {
                docker {
                    image 'node:8.16.0-alpine'
                }
            }
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Compiling...'
                dir('result') {
                    sh 'npm install'
                }
            }
        }
        stage('test'){
            agent {
                docker {
                    image 'node:8.16.0-alpine'
                }
            }
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Running unit tests'
                dir('result') {
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
        stage('docker-package') {
            agent any
            when{
                changeset '**/result/**'
                branch 'master'
            }
            steps {
                echo 'Packaging worker app with docker'
                script {
                    docker.withRegistry('https://index.docker.io/v1/','docker-login') {
                        def workerImage = docker.build("mmarquezvacas/result:v${env.BUILD_ID}","./result")
                        workerImage.push()
                        workerImage.push("${env.BRANCH_NAME}")
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'END'
        }
    }
}
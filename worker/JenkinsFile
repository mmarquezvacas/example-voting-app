pipeline {
    agent any
    tools {
        maven 'Maven 3.8.1'
    }
    stages {
        stage('build'){
            steps{
                echo 'Compiling worker app'
                dir('worker') {
                    sh 'mvn compile'
                }
            }
        }
        stage('test'){
            steps{
                echo 'Running unit tests'
            }
        }
        stage('package'){
            steps{
                'Packaging worker app'
            }
        }
    }

    post {
        always {
            echo 'END'
        }
    }
}